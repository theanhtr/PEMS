<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Điền thông tin cá nhân</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
</head>

<body>
    <form method="POST" action="/set-up-profile">
        <div class="form-detail">
            <div class="form-info col-md-12 col-xs-12">
                <div class="title-group">Thông tin cá nhân</div>
                <div class="group">
                    <input class="control-custom" name="fullname" type="text" required="required" oninvalid="this.setCustomValidity('Vui lòng điền thông tin dòng này!')" oninput="setCustomValidity('')" />
                    <span class="bar"></span>
                    <label>Họ và tên <a class="required">*</a></label>
                </div>
                <div class="group">
                    <input class="control-custom" name="phonenumber" type="text" required="required" oninvalid="this.setCustomValidity('Vui lòng điền thông tin dòng này!')" oninput="setCustomValidity('')" />
                    <span class="bar"></span>
                    <label>Số điện thoại <a class="required">*</a></label>
                </div>
                <div class="title-group">Thông tin địa chỉ</div>
                <div class="group">
                    <input class="control-custom" name="province" type="text" required="required" oninvalid="this.setCustomValidity('Vui lòng điền thông tin dòng này!')" oninput="setCustomValidity('')" />
                    <span class="bar"></span>
                    <label>Tỉnh/Thành Phố <a class="required">*</a></label>
                </div>
                <div class="group">
                    <input class="control-custom" name="district" type="text" required="required" oninvalid="this.setCustomValidity('Vui lòng điền thông tin dòng này!')" oninput="setCustomValidity('')" />
                    <span class="bar"></span>
                    <label>Quận/Huyện <a class="required">*</a></label>
                </div>
                <div class="group">
                    <input class="control-custom" name="ward" type="text" required="required" oninvalid="this.setCustomValidity('Vui lòng điền thông tin dòng này!')" oninput="setCustomValidity('')" />
                    <span class="bar"></span>
                    <label>Phường/Xã <a class="required">*</a></label>
                </div>
                <div class="group">
                    <input class="control-custom" name="address" type="text" />
                    <span class="bar"></span>
                    <label>Đường</label>
                </div>
            </div>
        </div>
        <div class="form-button text-center">
            <button class="btn btn-info" type="submit">Submit</button>
        </div>
    </form>

</body>

<style>
    .required {
        color: red;
        font-size: 16px;
        cursor: default;
    }

    .title-group {
        color: #2cb680;
        font-weight: bold;
        font-size: 21px;
    }

    .form-info {
        display: flex;
        flex-direction: column;
        row-gap: 8px;
    }

    .form-detail {
        padding-top: 50px;
        display: flex;
        align-items: flex-end;
    }

    .form-detail .control-custom {
        font-size: 16px;
        color: black;
        width: 97%;
    }

    .form-detail .group {
        position: relative;
    }

    .form-detail input {
        display: block;
        padding: 14px 0;
        border: none;
        border-bottom: 1px solid #d8d8d8;
        margin-top: 26px;
    }

    .form-detail textarea {
        display: block;
        border: none;
        border-bottom: 1px solid #d8d8d8;
    }

    .form-detail label {
        font-size: 14px;
        color: black;
        position: absolute;
        pointer-events: none;
        left: 0;
        top: 16px;
    }

    input:focus,
    textarea:focus {
        outline: none;
    }

    .form-detail .bar {
        position: relative;
        display: block;
        width: 97%;
    }

    .bar::before,
    .bar::after {
        content: '';
        height: 2px;
        width: 0;
        bottom: 1px;
        position: absolute;
        background: #2cb680;
        transition: 0.2s ease all;
        -moz-transition: 0.2s ease all;
        -webkit-transition: 0.2s ease all;
    }

    .bar::before {
        left: 50%;
    }

    .bar::after {
        right: 50%;
    }

    .form-detail input:focus~.bar::before,
    .form-detail input:focus~.bar::after,
    .form-detail textarea:focus~.bar::before,
    .form-detail textarea:focus~.bar::after {
        width: 50%;
    }
</style>

<script>
// URL API
let urlLocation = "https://vapi.vnappmob.com/api";
console.log(urlLocation)
// Lấy dữ liệu địa điểm bằng fetch API
fetch(urlLocation + "/province/")
    .then(response => response.json())
    .then(data => {
        console.log("Provinces:", data);
        // Bạn có thể lưu dữ liệu vào một biến hoặc thao tác khác ở đây
    })
    .catch(error => {
        console.error("Unable to fetch provinces:", error);
    });
</script>

</html>